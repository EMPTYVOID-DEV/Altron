{
	"name": "@altron/altron",
	"version": "2.0.1",
	"description": "Rich text editor as a svelte component",
	"maintainers": [
		"Aymen keskas <keskasaymen8@gmail.com> (https://aymenkeskas.vercel.app/)"
	],
	"engines": {
		"node": ">=16.14"
	},
	"keywords": [
		"sveltekit",
		"rich text editor",
		"javascript",
		"typescript",
		"svelte",
		"@altron",
		"blocks"
	],
	"author": "Keskas aymen",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Shinji13/Altron"
	},
	"scripts": {
		"dev": "vite --host",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"release": "pnpm run package && npx changeset publish ",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "svelte-kit sync && svelte-check",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		"./altron.svelte": {
			"types": "./dist/components/core/main.svelte.d.ts",
			"svelte": "./dist/components/core/main.svelte"
		},
		"./types": {
			"import": "./dist/utils/types.d.ts"
		},
		"./consts": {
			"types": "./dist/utils/consts.d.ts",
			"import": "./dist/utils/consts.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"type": "module",
	"typesVersions": {
		">4.0": {
			"altron.svelte": [
				"./dist/components/core/main.svelte.d.ts"
			],
			"consts": [
				"./dist/utils/consts.d.ts"
			]
		}
	},
	"dependencies": {
		"nanoid": "^5.0.3"
	}
}
